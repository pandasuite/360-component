{
  "version": "2.0.0",
  "main": "",

  "events": [
    {
      "id": "singleTap",
      "name": "Single tap",
      "locale_name": {
        "fr_FR": "Simple tap"
      }
    },
    {
      "id": "doubleTap",
      "name": "Double tap"
    },
    {
      "id": "touchDown",
      "name": "Touch down",
      "locale_name": {
        "fr_FR": "Touche"
      }
    },
    {
      "id": "touchUp",
      "name": "Touch up",
      "locale_name": {
        "fr_FR": "Relâche"
      }
    }
  ],

  "properties": [
    {
      "id": "type",
      "type": "Dropdown",
      "value": "image",
      "items": [
        {
          "id": "image",
          "name": "360° Image",
          "locale_name": {
            "fr_FR": "Image 360°"
          }
        },
        {
          "id": "video",
          "name": "360° Video",
          "locale_name": {
            "fr_FR": "Vidéo 360°"
          }
        }
      ]
    },
    {
      "id": "isGyro",
      "name": "Gyroscope",
      "locale_name": {
        "fr_FR": "Gyroscope"
      },
      "type": "Boolean",
      "value": true,
      "separator": true
    },
    {
      "id": "isAutoPlay",
      "name": "Autoplay",
      "locale_name": {
        "fr_FR": "Lecture automatique"
      },
      "type": "Boolean",
      "value": true
    }
  ],

  "actions": [
    {
      "id": "play",
      "name": "Play",
      "locale_name": {
        "fr_FR": "Lecture"
      }
    },
    {
      "id": "stop",
      "name": "Stop",
      "locale_name": {
        "fr_FR": "Arrêter"
      }
    },
    {
      "id": "pause",
      "name": "Pause",
      "locale_name": {
        "fr_FR": "Mettre en pause"
      }
    },
    {
      "id": "togglePause",
      "name": "Play/Pause",
      "locale_name": {
        "fr_FR": "Lecture/Pause"
      }
    }
  ],

  "resources": [
    {
      "id": "video.mp4",
      "type": "Video",
      "hidden": "properties.type.value != 'video'",
      "required": true
    },
    {
      "id": "image.jpg",
      "type": "Image",
      "hidden": "properties.type.value != 'image'",
      "required": true,
      "sizes": ["original"]
    }
  ]

}
